        <label>Day: 
            <input class="newForm" type="number" name="day">
        </label>
        <br/><br/>
        <label>Mountain: 
            <input class="newForm" type="text" name="mountain">
        </label>
        <br/><br/>
        <label>Who: 
            <input class="newForm" type="text" name="who">
        </label>
        <br/><br/>
        <label>Weather: 
            <input class="newForm" type="text" name="weather">
        </label>
        <br/><br/>
        <label>Temp Hi/Lo: 
            <input class="newForm" type="text" name="tempHiLo">
        </label>
        <br/><br/>
        <label>Wind: 
            <input class="newForm" type="text" name="wind">
        </label>
        <br/><br/>
        <label>Notes: 
